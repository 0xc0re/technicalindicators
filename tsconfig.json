{
  "compilerOptions": {
    "declaration": true,
    "module": "commonjs",
    "target": "es6",
    "noImplicitAny": true,
    "outDir": "./lib",
    "preserveConstEnums": true,
    "removeComments": true,
    "strictNullChecks": true,
    "baseUrl": ".", // This must be specified if "paths" is.
    "paths": {
      "linkedlist": ["typings/linkedlist"]
    },
    "typeRoots" : ["typings", "node_modules/**/@types"],
    "types" : ["linkedlist","node"]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*-spec.ts"
  ]
}
